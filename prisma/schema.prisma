generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model User {
  id        String   @id @default(uuid())
  name      String?
  email     String?  @unique
  oauthId     String?
  role        String?
  onboading   Boolean? @default(false)
  createdAt DateTime @default(now())
}
model Sweet {
  id        String   @id @default(uuid())
  name      String
  price     Int
  category  String
  quantity  Int
  createdAt DateTime @default(now())
}